{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('{{ asset('media/m.png') }}');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-color: #eae6da;
            color: #5d5048;
        }

        .navbar {
            background-color: #8d6c5c;
            color: #fff;
        }

        .navbar-brand img {
            height: 50px;
            margin-right: 10px;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #000;
            font-family: 'Arial', sans-serif;
            text-align: center;
        }

        form {
            background-color: #f5f5f5;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-top: 20px;
        }

        .btn {
            background-color: #b56549;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 20px;
        }

        .btn-secondary {
            background-color: #7d5e49;
            border-color: #7d5e49;
            color: #fff;
        }

        .btn:hover {
            background-color: #944832;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
        }

        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <nav class="navbar">
        <a class="navbar-brand" href="http://localhost/Projet/public/index.php/home1">
            <img src="{{ asset("media/logo.png") }}">
        </a>

        <ul class="navbar-nav">

        </ul>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Modifier un participant</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <button type="submit" class="btn btn-success">Modifier</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
