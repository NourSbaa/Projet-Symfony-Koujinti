{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('{{ asset('media/m.png') }}');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-color: #eae6da;
            color: #5d5048;
            text-align: center;
        }

        .navbar {
            background-color: #8d6c5c;
            color: #fff;
        }

        .navbar-brand img {
            height: 50px;
            margin-right: 10px;
        }

        .table {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #8d6c5c;
            color: #fff;
        }

        .table td {
            background-color: #f5f5f5;
        }

        .btn-warning,
        .btn-warrning {
            background-color: #b56549;
            border-color: #b56549;
            color: #fff;
            font-size: 36px;
            width: 300px;
            height: 150px;
            margin: 30px 0;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-warning:hover,
        .btn-warrning:hover {
            background-color: #944832;
            border-color: #944832;
        }

        .btn-secondary {
            background-color: #7d5e49;
            border-color: #7d5e49;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #5d4432;
            border-color: #5d4432;
            color: #fff;
        }

        .btn-primary {
            background-color: #b56549;
            border-color: #b56549;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #944832;
            border-color: #944832;
            color: #fff;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            padding: 0;
        }

        .navbar-nav .nav-item {
            margin-right: 20px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            transition: color 0.3s;
            text-decoration: none;
        }

        .navbar-nav .nav-link:hover {
            color: #000;
        }
    </style>
{% endblock %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
