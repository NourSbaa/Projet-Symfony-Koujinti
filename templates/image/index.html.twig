{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('{{ asset('media/m.png') }}');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-color: #eae6da;
            color: #5d5048;
        }

        .navbar {
            background-color: #8d6c5c;
            color: #fff;
        }

        .navbar-brand img {
            height: 50px;
            margin-right: 10px;
        }

        .table {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #8d6c5c;
            color: #fff;
        }

        .table td {
            background-color: #f5f5f5;
        }

        .btn-warning {
            background-color: #b56549;
            border-color: #b56549;
        }

        .btn-warrning:hover {
            background-color: #944940;
            border-color: #944940;
        }

        .btn-warrning {
            background-color: #b56940;
            border-color: #b56940;
        }

        .btn-warning:hover {
            background-color: #944832;
            border-color: #944832;
        }

        .btn-secondary {
            background-color: #7d5e49;
            border-color: #7d5e49;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #5d4432;
            border-color: #5d4432;
            color: #fff;
        }

        .btn-primary {
            background-color: #b56549;
            border-color: #b56549;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #944832;
            border-color: #944832;
            color: #fff;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            padding: 0;
        }

        .navbar-nav .nav-item {
            margin-right: 20px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            transition: color 0.3s;
            text-decoration: none;
        }

        .navbar-nav .nav-link:hover {
            color: #000;
        }
    </style>
{% endblock %}

{% block body %}
    <nav class="navbar">
        <a class="navbar-brand" href="http://localhost/Projet/public/index.php/accueil1">
            <img src="{{ asset('media/logo.png') }}">
        </a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="http://localhost/Projet/public/index.php/home2">Menu</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="http://localhost/Projet/public/index.php/home1">Ingredients</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="http://localhost/Projet/public/index.php/image/">Images</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item logout-btn">
                <a class="nav-link" href="http://localhost/Projet/public/index.php/accueil">Déconnexion</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Votre formulaire de recherche -->
            </div>
        </div>

        <table id="images" class="table table-striped mx-auto">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Alt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.alt }}</td>
                        <td>
                            <a href="{{ path('app_image_show', {'id': image.id}) }}" class="btn btn-warning">Voir</a>
                            <a href="{{ path('app_image_edit', {'id': image.id}) }}" class="btn btn-secondary"
                                onclick="return confirm('Etes-vous sûr de modifier {{ image.alt }}?');">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a href="{{ path('app_image_new') }}" class="btn btn-primary">+ Ajouter Image</a>
        </div>
    </div>
{% endblock %}
